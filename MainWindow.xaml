<Window x:Class="PasteToFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasteToFile"
        xmlns:viewModel="clr-namespace:PasteToFile.MVVM.ViewModel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:core="clr-namespace:PasteToFile.Core"
        mc:Ignorable="d"
        Height="640" Width="960"
        WindowStyle="None"
        Icon="/Images/app.ico"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen" 
        
        >

    <Window.Resources>
        <core:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="#1b1c1d"
            CornerRadius="30"
            MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ContentControl Grid.Row="0"
                            Grid.Column="1"
                            Grid.RowSpan="2"
                            Margin="10"
                            Content="{Binding CurrentView}"/>
            <Button Margin="20 28 0 5" Style="{StaticResource topButton}">
                <Icon:PackIconMaterial Kind="Menu" Width="15" Height="15"/>
            </Button>
            <DockPanel Grid.Column="1" LastChildFill="True" Height="60" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                    <!-- Minimize to Tray Button -->
                    <Button x:Name="BtnMinimize"  Content="—" Width="60" Height="35"
                         Background="#2E2E2E" Foreground="White"
                            Padding="4,4,4,4"
                        BorderBrush="{x:Null}" FontSize="14"
                        Command="{Binding MinimizeCommand}"/>

                    <!-- Close Button -->
                    <Button x:Name="BtnClose" Content="✕" Width="60" Height="35"
                         Background="#2E2E2E" Foreground="White"
                           Padding="4,4,4,4"
                        BorderBrush="{x:Null}" FontSize="14"
                        Command="{Binding CloseCommand}"/>
                </StackPanel>
            </DockPanel>

            <Border Grid.Row="0" Grid.RowSpan="2" Background="#282a2c " CornerRadius="0 30 0 30">
                <DockPanel>

                    <TextBlock Text="Paste to file"  Foreground="White" FontSize="16" FontWeight="SemiBold"
                               DockPanel.Dock="Top" TextAlignment="Center" Margin="5 25 0 10"/>
                    <!--<TextBlock Text="Clipboard"  Foreground="#d0bfff" FontSize="14" FontWeight="SemiBold"
                               DockPanel.Dock="Top" TextAlignment="Center"/>-->

                    <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background="#7e5fdc"/>

                    <StackPanel DockPanel.Dock="Top">

                        <RadioButton
                             Style="{StaticResource menuButton}"
                             Command="{Binding ClipboardViewCommand}"
                            IsChecked="True">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="ClipboardEdit" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Clipboard"/>
                            </StackPanel>
                        </RadioButton>
                        <RadioButton Style="{StaticResource menuButton}"
                                     Command="{Binding HowToUseViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Information" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="How to use"/>
                            </StackPanel>
                        </RadioButton>
                        <RadioButton
                             Style="{StaticResource menuButton}"
                             Command="{Binding SettingsViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Cog" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Settings"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </DockPanel>
            </Border>


        </Grid>


    </Border>
</Window>
