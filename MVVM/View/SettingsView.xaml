<UserControl x:Class="PasteToFile.MVVM.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:PasteToFile.MVVM.ViewModel"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:core="clr-namespace:PasteToFile.Core"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             mc:Ignorable="d"
             d:DesignHeight="640" d:DesignWidth="810"
             d:DataContext="{d:DesignInstance Type=viewModel:SettingsViewModel}">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <core:PageComparisonConverter x:Key="PageComparisonConverter"/>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <!--<i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>-->

    <Grid Background="{StaticResource BackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="20">
            <StackPanel MaxWidth="600">

                <!-- Header -->
                <TextBlock Text="Settings" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryTextBrush}" 
                           Margin="0,0,0,30"/>

                <!-- General Settings Section -->
                <Border Background="{StaticResource CardBackgroundBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="24" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="General Settings" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryTextBrush}" 
                                   Margin="0,0,0,16"/>

                        <CheckBox Content="Start with Windows" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding StartWithWindows, Mode=TwoWay}"/>

                        <CheckBox Content="Minimize to system tray" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding MinimizeToTray, Mode=TwoWay}"/>

                        <CheckBox Content="Show notifications" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding ShowNotifications, Mode=TwoWay}"/>

                        <CheckBox Content="Auto-save clipboard content" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding AutoSaveClipboard, Mode=TwoWay}"/>
                    </StackPanel>
                </Border>

                <!-- File Management Section -->
                <Border Background="{StaticResource CardBackgroundBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="24" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="File Management" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryTextBrush}" 
                                   Margin="0,0,0,16"/>

                        <CheckBox Content="Create subfolders by date" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding CreateDateFolders, Mode=TwoWay}"/>

                        <CheckBox Content="Overwrite existing files" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding OverwriteFiles, Mode=TwoWay}"/>

                        <CheckBox Content="Include file extension in filename" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding IncludeFileExtension, Mode=TwoWay}"/>
                    </StackPanel>
                </Border>

                <!-- Output Folder Section -->
                <Border Background="{StaticResource CardBackgroundBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="24" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Output Folder" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryTextBrush}" 
                                   Margin="0,0,0,16"/>

                        <TextBlock Text="Choose where files will be saved:" 
                                   FontSize="14" 
                                   Foreground="{StaticResource SecondaryTextBrush}" 
                                   Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" 
                                     Text="{Binding OutputFolderPath, Mode=TwoWay}" 
                                     FontSize="14" 
                                     Padding="12,8" 
                                     Background="{StaticResource SurfaceBrush}" 
                                     Foreground="{StaticResource PrimaryTextBrush}" 
                                     BorderBrush="{StaticResource BorderBrush}" 
                                     BorderThickness="1" 
                                     IsReadOnly="True"
                                     Margin="0,0,8,0"/>

                            <Button Grid.Column="1" 
                                    Content="Browse..." 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding BrowseFolderCommand}"
                                    Width="100"/>
                        </Grid>

                        <TextBlock Text="{Binding OutputFolderPath}" 
                                   FontSize="12" 
                                   Foreground="{StaticResource MutedTextBrush}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Advanced Settings Section -->
                <Border Background="{StaticResource CardBackgroundBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="24" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Advanced" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryTextBrush}" 
                                   Margin="0,0,0,16"/>

                        <CheckBox Content="Enable debug logging" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding EnableDebugLogging, Mode=TwoWay}"/>

                        <CheckBox Content="Check for updates automatically" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding AutoCheckUpdates, Mode=TwoWay}"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,20,0,0">
                    <Button Content="Reset to Defaults" 
                            Style="{StaticResource ModernButton}" 
                            Command="{Binding ResetSettingsCommand}"
                            Margin="0,0,12,0"/>

                    <Button Content="Save Settings" 
                            Style="{StaticResource ModernButton}" 
                            Command="{Binding SaveSettingsCommand}"
                            Background="{StaticResource AccentBrush}"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>